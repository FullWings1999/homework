{{#each articles}}
    {{#if this.publish}}
        <section class="articles">
            <h3><a href={{this.url}}>Read more</a></h3>
        </section>
        {{#with this}}
                <h2 class="article-title">
                    {{key}}{{title}}
                </h2>
                <h3 class="article-subTitle">
                    {{subTitle}}
                </h3>
                <h4 class="article-date">
                    {{date}}
                </h4>
                <p class="article-content">
                    {{content}}
                </p>
            {{/with}}

    {{/if}}

{{/each}}